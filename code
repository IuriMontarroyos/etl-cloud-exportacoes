import pandas as pd

data = {
    "país": ["Brasil", "Argentina", "Chile", "Brasil", "Chile"],
    "produtos": ["saco", "papel kraft", "saco", "papelao ondulado", "papel kraft"],
    "toneladas": [12, 8, 6, 10, 5]
}

df = pd.DataFrame(data)
df
df["produtos"] = df["produtos"].str.lower()
relatório = (
    df.groupby( ["país", "produtos"]) ["toneladas"]
.sum()
.reset_index()

                 )
relatório
#Simulando bucket s3 como pasta local
s3_bucket_simulado = './s3_bucket_simulado' # Define the variable
bucket_s3 = s3_bucket_simulado
import os

os.makedirs(bucket_s3, exist_ok=True)

#Salvando relatório no bucket
file_path = f"{bucket_s3}/relatorio_exportacoes.csv" # Corrected typo in filename
relatório.to_csv(file_path, index=False)
file_path
